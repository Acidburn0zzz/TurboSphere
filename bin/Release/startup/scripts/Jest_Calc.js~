var ang = 0;
var y = 0;
var fn1 = GetSystemFont();
var orange = new Color(255, 128, 0, undefined);
while(!IsKeyPressed(KEY_R)){
	fn1.drawText(24, 8, "KeyBuffer Test.");
fn1.drawText(8, 24, "Press up or down: "+ y);
fn1.drawText(8, 40, "Press R to proceed to the second test.");

	while (AreKeysLeft()) {
		var k = GetKey();
		switch (k) {
			case KEY_UP: y++; break;
			case KEY_DOWN: y--; break;
		}

	}

ang+=0.1;

Rectangle((GetScreenWidth()/2)+(64*(Math.sin(ang))), (GetScreenHeight()/2)+(64*(Math.cos(ang))), 16, 16, orange);
Delay(15);
FlipScreen();
}